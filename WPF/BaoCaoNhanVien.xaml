<Window x:Class="WPF.BaoCaoNhanVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        WindowStartupLocation="CenterScreen"
        Title="Báo Cáo Nhân Viên" Height="850" Width="850" Background="#f4f4f4">

    <Grid Margin="10">
        <StackPanel Orientation="Vertical" Background="White" Margin="15">
            <TextBlock Text="BÁO CÁO NHÂN VIÊN" FontSize="20" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center"/>

            <!-- Biểu đồ thống kê nhân viên theo phòng ban -->
            <TextBlock Text="📊 Thống kê nhân viên theo Phòng Ban" FontSize="16" FontWeight="Bold" Foreground="#007acc" Margin="0,10,0,5"/>
            <lvc:CartesianChart x:Name="DepartmentChart" Height="200">
                <lvc:CartesianChart.Series>
                    <lvc:ColumnSeries Values="{Binding DepartmentReportValues}" Title="Nhân viên"/>
                </lvc:CartesianChart.Series>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Labels="{Binding DepartmentLabels}" Title="Phòng Ban"/>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Số lượng"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <!-- Bảng thống kê nhân viên theo chức vụ -->
            <TextBlock Text="🛠️ Thống kê nhân viên theo Chức Vụ" FontSize="16" FontWeight="Bold" Foreground="#007acc" Margin="0,10,0,5"/>
            <ListView x:Name="PositionReportList" Height="120" Background="White" BorderBrush="#ddd" BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Chức Vụ" Width="400" DisplayMemberBinding="{Binding PositionName}"/>
                        <GridViewColumn Header="Số Nhân Viên" Width="Auto" DisplayMemberBinding="{Binding EmployeeCount}"/>
                    </GridView>
                </ListView.View>
            </ListView>


            <!-- Biểu đồ thống kê nhân viên theo giới tính -->
            <TextBlock Text="👥 Thống kê nhân viên theo Giới Tính" FontSize="16" FontWeight="Bold" Foreground="#007acc" Margin="0,10,0,5"/>
            <lvc:PieChart x:Name="GenderChart" Height="200">
                <lvc:PieChart.Series>
                    <lvc:PieSeries Values="{Binding MaleCount}" Title="Nam"/>
                    <lvc:PieSeries Values="{Binding FemaleCount}" Title="Nữ"/>
                </lvc:PieChart.Series>
            </lvc:PieChart>
            <Button Content="Quay lại" Width="200" Height="40" Margin="0,15,0,0"
Background="#007acc" Foreground="White" FontWeight="Bold"
Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
