<UserControl x:Class="WPF.EmployeeManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10" Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Ảnh đại diện" FontWeight="Bold" Padding="10" Grid.Column="0" Grid.Row="0">
            <Image x:Name="imgAvt" Source="Resource\icon\user1.png" Width="auto" Height="auto"/>
        </GroupBox>
        <!-- Thông tin nhân viên -->
        <GroupBox Header="Thông tin nhân viên" FontWeight="Bold" Padding="10" Grid.Row="0" Grid.Column="1" Margin="10,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ID" Grid.Row="0" Margin="5"/>
                    <TextBox x:Name="tbId" Grid.Row="0" Grid.Column="1" IsEnabled="False" Text="Thêm mới không cần ID" Margin="5"/>

                    <TextBlock Text="Họ và tên" Grid.Row="1" Margin="5"/>
                    <TextBox x:Name="tbName" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Mật khẩu" Grid.Row="2" Margin="5"/>
                    <PasswordBox x:Name="pbPassword" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Giới tính" Grid.Row="3" Margin="5"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                        <RadioButton x:Name="rbMale" Content="Nam" Margin="5"/>
                        <RadioButton x:Name="rbFemale" Content="Nữ" Margin="5"/>
                    </StackPanel>

                    <TextBlock Text="Ngày sinh" Grid.Row="4" Margin="5"/>
                    <DatePicker x:Name="dpDate" Grid.Row="4" Grid.Column="1" SelectedDate="1999-10-04" Margin="5"/>

                    <TextBlock Text="Email" Grid.Row="5" Margin="5"/>
                    <TextBox x:Name="tbMail" Grid.Row="5" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Username" Grid.Row="6" Margin="5"/>
                    <TextBox x:Name="tbUsername" Grid.Column="2" Grid.Row="6"  Margin="5" Height="17.96"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Số điện thoại" Grid.Row="0" Margin="5"/>
                    <TextBox x:Name="tbphone" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Địa chỉ" Grid.Row="1" Margin="5"/>
                    <TextBox x:Name="tbAddress" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Phòng ban" Grid.Row="2" Margin="5"/>
                    <ComboBox x:Name="cbDepartment" DisplayMemberPath="DepartmentName" Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Chức vụ" Grid.Row="3" Margin="5"/>
                    <ComboBox x:Name="cbPosition" DisplayMemberPath="PositionName" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Mức lương" Grid.Row="4" Margin="5"/>
                    <TextBox x:Name="tbSalary" Grid.Row="4" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Ngày làm việc" Grid.Row="5" Margin="5"/>
                    <DatePicker x:Name="dpStartTime" Grid.Row="5" Grid.Column="1" SelectedDate="1999-10-04" Margin="5"/>

                    <TextBlock Text="Ảnh đại diện" Grid.Row="6" Margin="5"/>
                    <Button x:Name="btnAvatar" Content="Chọn ảnh đại diện" Grid.Column="2" Grid.Row="6"  Margin="5" Height="17.96" Click="btnAvatar_Click"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Chức năng -->
        <GroupBox Header="Chức năng" Grid.ColumnSpan="2" FontWeight="Bold" Grid.Row="1" Height="80" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Height="35">
                <Button x:Name="btnAdd" Content="Thêm" Margin="5" Width="80" Click="btnAdd_Click"/>
                <Button x:Name="btnUpdate" Content="Sửa" Margin="5" Width="80" Click="btnUpdate_Click"/>
                <Button x:Name="btnDelete" Content="Xóa" Margin="5" Width="80" Click="btnDelete_Click"/>
                <Button x:Name="btnSaveImage" Content="Lưu ảnh" Margin="5" Width="80"/>
            </StackPanel>
        </GroupBox>

        <!--Danh sách nhân viên-->

        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Margin="0 10 0 0">
            <ListView x:Name="lvEmployees" ItemsSource="{Binding Path=Employees}" Height="auto" MouseLeftButtonUp="Member_MouseLeftButtonUp">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Path= EmployeeId}" />
                        <GridViewColumn Header="Họ và tên" Width="80" DisplayMemberBinding="{Binding Path= FullName}" />
                        <GridViewColumn Header="Giới tính" Width="80" DisplayMemberBinding="{Binding Path= Gender}" />
                        <GridViewColumn Header="Ngày sinh" Width="80" DisplayMemberBinding="{Binding Path= DateOfBirth}" />
                        <GridViewColumn Header="Email" Width="100" DisplayMemberBinding="{Binding Path= Email}" />
                        <GridViewColumn Header="Số điện thoại" Width="100" DisplayMemberBinding="{Binding Path= PhoneNumber}" />
                        <GridViewColumn Header="Địa chỉ" Width="100" DisplayMemberBinding="{Binding Path= Address}" />
                        <GridViewColumn Header="Phòng ban" Width="100" DisplayMemberBinding="{Binding Path= Department.DepartmentName}" />
                        <GridViewColumn Header="Chức vụ" Width="100" DisplayMemberBinding="{Binding Path= Position.PositionName}" />
                        <GridViewColumn Header="Mức lương" Width="80" DisplayMemberBinding="{Binding Path= Position.BasicSalary}" />
                        <GridViewColumn Header="Ngày bắt đầu làm" Width="150" DisplayMemberBinding="{Binding Path= StartDate}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>
