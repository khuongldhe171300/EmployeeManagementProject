<Window x:Class="WPF.Admin.ActivityLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhật ký hoạt động" Height="500" Width="800"
        Background="#FFFAE3">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="📜 Nhật ký hoạt động" FontSize="22" FontWeight="Bold" Foreground="#333"/>

        <!-- DataGrid hiển thị logs -->
        <ListView x:Name="lvActivityLogs" Grid.Row="1" Margin="0,20,0,0" 
                  Background="White" BorderThickness="1" BorderBrush="Gray"
                  ItemsSource="{Binding}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding LogId}" />
                    <GridViewColumn Header="Nhân viên" Width="120" DisplayMemberBinding="{Binding User.Username}" />
                    <GridViewColumn Header="Hành động" Width="150" DisplayMemberBinding="{Binding Action}" />
                    <GridViewColumn Header="Chi tiết" Width="150" DisplayMemberBinding="{Binding ActionDetails}" />
                    <GridViewColumn Header="IP" Width="120" DisplayMemberBinding="{Binding Ipaddress}" />
                    <GridViewColumn Header="Thời gian" Width="150" DisplayMemberBinding="{Binding LoggedAt}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
