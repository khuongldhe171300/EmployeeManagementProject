<Window x:Class="WPF.Admin.DepManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Admin"
        mc:Ignorable="d"
                Title="Department" Height="600" Width="1000">
    <DockPanel LastChildFill="True">
        <!-- Sidebar (Nút Quay Lại) -->
        <StackPanel Width="200" Background="#E65100" Orientation="Vertical" DockPanel.Dock="Left">
            <Button Content="🔙 Quay Lại" Margin="10" Height="50" Background="LightGray" Foreground="White" Cursor="Hand" Click="Button_Click"/>
        </StackPanel>

        <Grid Background="#FFE0B2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Book Information and Buttons -->
            <StackPanel Grid.Column="0" Margin="20" Background="#FFAB91">
                <TextBlock Text="Thông Tin Phòng Ban" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20" Foreground="White"/>
                <Label Content="Tên Phòng:" Foreground="White"/>
                <TextBox Name="NameTextBox" Margin="0 0 0 10"/>
                <Label Content="Mô Tả:" Foreground="White"/>
                <TextBox Name="DescriptionTextBox" Margin="0 0 0 10"/>
                <Label Content="Trạng Thái:" Foreground="White"/>
                <ComboBox Name="StatusBox" Height="20" BorderBrush="#D5D8DC">
                    <ComboBoxItem Content="Hoạt Động"/>
                    <ComboBoxItem Content="Không Hoạt Động "/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="+ Thêm" Width="80" Margin="5" Background="#388E3C" Foreground="White" Click="AddButton_Click"/>
                    <Button Content="✏ Sửa" Width="80" Margin="5" Background="#F57C00" Foreground="White" Click="EditButton_Click"/>
                    <Button Content="🗑 Xóa" Width="80" Margin="5" Background="#D32F2F" Foreground="White" Click="DeleteButton_Click"/>
                </StackPanel>
                <Label Content="Tên Nhân Viên:" Foreground="White"/>
                <TextBox Name="EmpNameTextBox" TextChanged="EmpNameTextBox_TextChanged" Margin="0 0 0 10"/>
                <ListBox x:Name="EmpSuggestionList" Visibility="Collapsed" SelectionChanged="EmpSuggestionList_SelectionChanged"/>
                <Button Content="+ Thêm Nhân Viên" Width="118" Margin="5" Background="#388E3C" Foreground="White" Click="AddEmpButton_Click"/>
                <Button Content="👁️ Xem Danh Sách Nhân Viên" Width="180" Margin="5" Background="#F57C00" Foreground="White" Click="ViewEmpList_Click"/>
            </StackPanel>

            <!-- ListView and Search -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Danh Phòng Ban" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 10" Foreground="#E65100"/>

                <StackPanel Grid.Row="1">
                    <DockPanel Margin="0 10">
                        <TextBox Name="SearchTextBox" Width="320" VerticalAlignment="Center" Margin="0 0 10 0" Height="30" VerticalContentAlignment="Center" Padding="5"/>
                        <Button Content="Tìm kiếm" Width="80" Background="#F57C00" Foreground="White" Click="SearchButton_Click" Height="30" VerticalAlignment="Center"/>
                    </DockPanel>
                    <ListView Name="DepartmentListView" Height="454" SelectionChanged="DepartmentListView_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding DepartmentId}" Width="30"/>
                                <GridViewColumn Header="Tên Phòng" DisplayMemberBinding="{Binding DepartmentName}" Width="160"/>
                                <GridViewColumn Header="Mô Tả" DisplayMemberBinding="{Binding Description}" Width="160"/>
                                <GridViewColumn Header="Trạng Thái" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="{Binding Status}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="True">
                                                                <Setter Property="Text" Value="Hoạt Động" />
                                                                <Setter Property="Foreground" Value="Green"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="false">
                                                                <Setter Property="Text" Value="Không Hoạt Động" />
                                                                <Setter Property="Foreground" Value="Red"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
