<Window x:Class="WPF.Employee.NotificationEmp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Employee"
        mc:Ignorable="d"
        Title="NotificationEmp" Height="400" Width="750"
        WindowStartupLocation="CenterScreen"
        >

    <Grid Background="#FFE0B2" Margin="0,0,-83,0">
        <TextBlock Text="Thông Báo" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <ListView Name="NotificationListView" Margin="10,50,10,0" SelectionChanged="DepartmentListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding NotificationId}" Width="30"/>
                    <GridViewColumn Header="Tiêu Đề" DisplayMemberBinding="{Binding Title}" Width="135"/>
                    <GridViewColumn Header="Nội Dung" DisplayMemberBinding="{Binding Content}" Width="260"/>
                    <GridViewColumn Header="Phân Loại" DisplayMemberBinding="{Binding NotificationType}" Width="100"/>
                    <GridViewColumn Header="Ngày" DisplayMemberBinding="{Binding CreatedDate}" Width="110"/>
                    <GridViewColumn Header="Trạng Thái" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding IsRead}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRead}" Value="True">
                                                    <Setter Property="Text" Value="Đã Đọc" />
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsRead}" Value="false">
                                                    <Setter Property="Text" Value="Chưa Đọc" />
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
