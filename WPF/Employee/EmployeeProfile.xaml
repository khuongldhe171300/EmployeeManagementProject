<Window x:Class="WPF.Employee.EmployeeProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Employee"
        mc:Ignorable="d"
         d:DesignHeight="330" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="7*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Ảnh đại diện" FontWeight="Bold" Padding="10" Grid.Column="0" Grid.Row="1">
            <Image x:Name="imgAvt" Source="Resource\icon\user1.png" Width="auto" Height="auto"/>
        </GroupBox>
        <!-- Thông tin nhân viên -->
        <GroupBox Header="Thông tin nhân viên" FontWeight="Bold" Padding="10" Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="ID" Grid.Row="0" Margin="5"/>
                    <TextBox x:Name="tbId" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Margin="5"/>

                    <TextBlock Text="Họ và tên" Grid.Row="1" Margin="5"/>
                    <TextBox x:Name="tbName" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Giới tính" Grid.Row="2" Margin="5"/>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
                        <RadioButton x:Name="rbMale" IsChecked="True" Content="Nam" Margin="5"/>
                        <RadioButton x:Name="rbFemale" Content="Nữ" Margin="5"/>
                    </StackPanel>

                    <TextBlock Text="Ngày sinh" Grid.Row="3" Margin="5"/>
                    <DatePicker x:Name="dpDate" Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Email" Grid.Row="4" Margin="5"/>
                    <TextBox x:Name="tbMail" Grid.Row="4" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Ảnh đại diện" Grid.Row="5" Margin="5"/>
                    <Button x:Name="btnAvatar" Content="Chọn ảnh đại diện" Grid.Column="2" Grid.Row="5"  Margin="5" Height="17.96" Click="btnAvatar_Click"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Số điện thoại" Grid.Row="0" Margin="5"/>
                    <TextBox x:Name="tbphone" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Địa chỉ" Grid.Row="1" Margin="5"/>
                    <TextBox x:Name="tbAddress" Grid.Row="1" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Phòng ban" Grid.Row="2" Margin="5"/>
                    <TextBox x:Name="cbDepartment" IsReadOnly="True"  Grid.Row="2" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Chức vụ" Grid.Row="3" Margin="5"/>
                    <TextBox x:Name="cbPosition" IsReadOnly="True"  Grid.Row="3" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Mức lương" Grid.Row="4" Margin="5"/>
                    <TextBox x:Name="tbSalary" IsReadOnly="True" Grid.Row="4" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="Ngày làm việc" Grid.Row="5" Margin="5"/>
                    <DatePicker x:Name="dpStartTime" IsEnabled="False" Grid.Row="5" Grid.Column="1" Margin="5"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Chức năng -->
        <GroupBox Header="Chức năng" Grid.ColumnSpan="2" FontWeight="Bold"   Grid.Row="0" Height="80" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Height="35">
                <Button x:Name="btnUpdate" Content="Sửa" Margin="5" Width="80" Click="btnUpdate_Click"/>
                <Button x:Name="btnDayOff" Content="Ngày Nghỉ" Margin="5" Width="80" Click="btnDayOff_Click" />
                <Button x:Name="btnPayroll" Content="Lương" Margin="5" Width="80" Click="btnPayroll_Click"/>
                <Button x:Name="btnNotification" Content="Thông Báo" Margin="5" Width="80" Click="btnNotification_Click"/>
            </StackPanel>
        </GroupBox>

        <!--Danh sách nhân viên-->

        <!--<StackPanel Grid.Row="2" Grid.ColumnSpan="3">
            <ListView x:Name="lvEmployees" ItemsSource="{Binding Path=Employees}" Height="auto" MouseLeftButtonUp="Member_MouseLeftButtonUp">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Path= EmployeeId}" />
