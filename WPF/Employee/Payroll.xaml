<Window x:Class="WPF.Employee.Payroll"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Employee"
        mc:Ignorable="d"
        Title="Payroll System" 
        Height="400" 
        Width="800"
        WindowStyle="SingleBorderWindow"
        Background="#F5F6F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Thống kê sẽ ở đây -->
            <RowDefinition Height="*"/>
            <!-- DataGrid sẽ ở đây -->
        </Grid.RowDefinitions>

        <!-- Form nhập Employee ID, Tháng, Năm -->
        <Border Background="White" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,10"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnBack"  Content="Trở về" Width="50" Margin="0,0,255,0" Click="btnBack_Click"/>
                <Label Content="Tháng:"/>
                <ComboBox x:Name="cbMonth" Width="79">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="11"/>
                    <ComboBoxItem Content="12"/>
                </ComboBox>
                <Label Content="Năm:"/>
                <TextBox x:Name="txtYear" Width="80"  Margin="5,0,20,0"/>
                <Button x:Name="btnLoadData"  Content="Tìm" Width="50" Click="BtnLoadData_Click"/>
            </StackPanel>
            
        </Border>

        <!-- Thống kê - đặt ở Grid.Row="1" -->
        <Border Grid.Row="1"  Background="White" CornerRadius="5" Padding="10" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <Label Content="Tổng giờ làm việc:"/>
                <TextBlock x:Name="txtTotalWorkingHours" FontWeight="Bold"/>
                <Label Content="Tổng giờ làm thêm:"/>
                <TextBlock x:Name="txtTotalOutTime" FontWeight="Bold"/>
                <Label Content="Tổng lương:"/>
                <TextBlock x:Name="txtTotalSalary" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="2"  >
            <!-- Hiển thị thông tin Payroll - đặt ở Grid.Row="2" -->
            <ListView Name="dgPayroll"  Margin="10,50,10,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding PayrollId}" Width="30"/>
                        <GridViewColumn Header="Lương cơ bản" DisplayMemberBinding="{Binding BasicSalary}" Width="100"/>
                        <GridViewColumn Header="Phụ cấp" DisplayMemberBinding="{Binding Allowance}" Width="100"/>
                        <GridViewColumn Header="Thưởng Ngoài Giờ" DisplayMemberBinding="{Binding Bonus}" Width="120"/>
                        <GridViewColumn Header="Tổng Nhận" DisplayMemberBinding="{Binding TotalSalary}" Width="100"/>
                        <GridViewColumn Header="Ngày Trả Lương" DisplayMemberBinding="{Binding PaymentDate}" Width="100"/>
                        <GridViewColumn Header="Trạng Thái" DisplayMemberBinding="{Binding PaymentStatus}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</Window>