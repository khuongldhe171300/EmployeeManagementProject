<Window x:Class="WPF.LichSuChamCong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Lịch sử Chấm Công"
        Height="500" Width="800"
        Background="#f2f2f2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Text="Lịch sử Chấm Công"
                   FontSize="22" FontWeight="Bold" Foreground="#333"
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- DataGrid hiển thị danh sách chấm công -->
        <DataGrid ItemsSource="{Binding AttendanceList}"
                  AutoGenerateColumns="False"
                  Grid.Row="1"
                  Margin="0,0,0,10"
                  RowBackground="White"
                  AlternatingRowBackground="#E3E3E3"
                  BorderThickness="1" BorderBrush="Gray">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ngày" Binding="{Binding Date}" Width="150"/>
                <DataGridTextColumn Header="Giờ vào" Binding="{Binding CheckInTime}" Width="150"/>
                <DataGridTextColumn Header="Giờ ra" Binding="{Binding CheckOutTime}" Width="150"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Giờ làm" Binding="{Binding Status}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Các nút điều khiển -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Refresh" Width="100" Height="35" Margin="0,0,10,0"
                    Background="#0078D7" Foreground="White" FontWeight="Bold"
                    Command="{Binding RefreshCommand}" Click="RefreshButton_Click"/>
            <Button Content="Quay lại" Width="100" Height="35"
                    Background="#D9534F" Foreground="White" FontWeight="Bold"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>