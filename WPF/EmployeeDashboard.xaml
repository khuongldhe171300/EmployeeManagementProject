<Window x:Class="WPF.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="EmployeeDashboard" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="OrangeRed" Orientation="Horizontal">
            <Label Content="Employee Dashboard" Margin="10" FontWeight="Bold" FontSize="16" Foreground="White" />
            <StackPanel Orientation="Horizontal" Height="30" Width="auto">
                <Button Content="Chấm công" Width="120" Margin="0 0 10 0"/>
                <Button Content="Báo cáo nhân công" Width="120" Margin="0 0 10 0" Click="ReportEmployee_Click"/>
                <Button Content="Báo cáo lương thưởng" Width="130" Margin="0 0 10 0"/>
                <Button Content="Profile" Width="120" Margin="0 0 10 0"/>
                <Button Content="Đăng xuất" Width="120" Margin="0 0 10 0"/>
            </StackPanel>
        </StackPanel>
        <GroupBox Grid.Row="1" Margin="10" BorderThickness="3" BorderBrush="Black" Padding="5">
            <ContentControl Content="{Binding CurrentView}"/>
        </GroupBox>
    </Grid>
</Window>