<Window x:Class="WPF.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
               mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
                Title="Employee Dashboard" Height="600" Width="1000" Background="#eef1f5">

    <Grid>
        <!-- Header with buttons -->
        <DockPanel LastChildFill="True">
            <StackPanel Orientation="Horizontal" Background="#E65100" Height="80" DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <TextBlock Text="Employee Dashboard" Foreground="White" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,20,0"/>
                <Button Content="Chấm công"  Margin="20,0,0,0" Click="ChamCong_Click" Width="110"/>
                <Button Content="Báo cáo chấm công" Margin="20,0,0,0"  Click="BaoCaoChamCong_Click" Width="110"/>
                <Button Content="Báo cáo lương thưởng"  Margin="20,0,0,0" Click="BaoCaoLuong_Click" Width="130"/>
                <Button Content="Profile" Margin="20,0,0,0" Click="Profile_Click" Width="79"/>
                <Button Content="🔑 Đăng Xuất" Margin="20,0,0,0" Click="Logout_Click" Width="110"/>
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <Border Background="White" CornerRadius="15" Margin="20,99,20,23" BorderBrush="#FF9800" BorderThickness="2">
            <Grid x:Name="ContentGrid">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Background="#FFF3E0" Margin="20">
                    <TextBlock Text="Chào mừng Employee!" FontSize="36" FontWeight="Bold" Foreground="#E65100" TextAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Hệ thống quản lý thư viện" FontSize="20" Foreground="#666" TextAlignment="Center" Margin="0,0,0,20"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <!-- Styles -->
    <Window.Resources>
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="#FF9800"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF9800" BlurRadius="10" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E65100"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#E65100" BlurRadius="15" Opacity="0.8"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource HeaderButtonStyle}">
            <Setter Property="Background" Value="#D84315"/>
        </Style>
    </Window.Resources>
</Window>

