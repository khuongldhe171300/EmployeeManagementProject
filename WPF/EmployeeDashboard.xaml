<Window x:Class="WPF.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="AdminDashboard" Height="800" Width="1500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="OrangeRed" Orientation="Horizontal">
            <Label Content="Admin Dashboard" Margin="10" FontWeight="Bold" FontSize="16" Foreground="White" />
            <StackPanel Orientation="Horizontal" Height="30" Width="auto">
                <Button Content="Quản Lý Nhân Viên" Width="120" Margin="0 0 10 0" Click="ReportEmployee_Click"/>
                <Button x:Name="QuanLyPhongBan_btn" Content="Quản Lý Phòng Ban" Width="120" Margin="0 0 10 0" Click="QuanLyPhongBan_btn_Click"/>
                <Button x:Name="QuanLyNghiPhep_btn" Content="Quản Lý Nghỉ Phép" Width="120" Margin="0 0 10 0" Click="QuanLyNghiPhep_btn_Click" />
                <Button x:Name="BaoCaoChamCong_btn" Content="Báo Cáo Chấm Công" Width="120" Margin="0 0 10 0" Click="BaoCaoChamCong_btn_Click" />
                <Button x:Name="ThongKeNhanVien_btn" Content="Thống Kê Nhân Viên" Width="120" Margin="0 0 10 0" Click="ThongKeNhanVien_btn_Click"  />
                <Button x:Name="ThongKeLuongNhanVien_btn" Content="Thống Kê Lương Nhân Viên" Width="170" Margin="0 0 10 0" Click="ThongKeLuongNhanVien_btn_Click"  />
                <Button x:Name="TraLuong_btn" Content="Trả Lương Nhân Viên" Width="120" Margin="0 0 10 0" Click="TraLuong_btn_Click"  />
                <Button x:Name="Thongbao_btn" Content="Tạo thông báo" Width="120" Margin="0 0 10 0" Click="Thongbao_btn_Click"  />
                <Button Content="Đăng xuất" Width="120" Margin="0 0 10 0" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
        <GroupBox Grid.Row="1" Margin="10" BorderThickness="3" BorderBrush="Black" Padding="5">
            <ContentControl Content="{Binding CurrentView}"/>
        </GroupBox>
    </Grid>
</Window>